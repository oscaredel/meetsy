    <% end %>
    <% if response.id == session[:uuid] or @event.organiser.id == session[:uuid] %>
      <%= link_to icon('fas', 'trash'), event_response_path(@event, response), method: :delete, data: { confirm: "Are you sure you want to remove your response?" }, class:'text-danger' %>
    <% end %>
  </p>
<% end %>


<% unless @event.responses.no.empty? %>
  <h4 class="d-inline">✌️</h4> <p class="d-inline border-bottom">They can't make it</p>
<% end %>

<% @event.responses.no.each do |response| %>
