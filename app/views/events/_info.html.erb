<div class="row details d-flex justify-content-between align-items-start">

  <div class="col-md-7 p-3 m-3 bg-dark rounded description shadow pane">
    <h5 class="pane-name">Storytime</h5>
    <p class="d-inline edit-event-btn">
      <%= link_to icon('fas', 'calendar-plus'), root_path, class:'btn btn-brand' %>
      <% if @event.organiser.id != nil && @event.organiser.id == session[:uuid] %>
            <%= link_to icon('fas', 'edit') + "", edit_event_path(@event), class:'btn btn-warning' %>
            <%= link_to icon('fas', 'trash') + "",
                        event_path(@event),
                        method: :delete,
                        data: { confirm: "Are you sure you want to delete the event?" },
                        class:'btn btn-danger' %>
      <% end %>
    </p>
    <p style="white-space: pre-line;"><%= @event.description %></p>
    <div class="organized-by my-2">
      <% if @event.organiser.image.attached? %>
        <img src="<%= cl_image_path(@event.organiser.image.key, crop: :fill) %>" alt="Organiser-image" class="avatar">
      <% else %>
        <h4 class="d-inline">👩‍💻</h4>
      <% end %>
      <%= @event.organiser.name %>
    </div>
  </div>

  <div class="col-md-4 m-3">

    <div class="row">
      <div class="col-md-12 mb-3 p-3 bg-dark rounded info shadow pane">
        <h5 class="pane-name">Time & Place</h5>
        <div class="time my-2">
          <h4 class="d-inline">🗓</h4> <%= @event.starts_at.strftime("%B %d at %H:%M") %>
        </div>
        <div class="place my-2">
          <h4 class="d-inline">📍</h4> <%= @event.location %>
        </div>
      </div>

      <div class="col-md-12 my-3 pt-3 px-2 pane bg-dark rounded shadow text-center">
        <h5 class="pane-name">Share</h5>
        <div class="">
          <div><input type="text input" value="<%= event_url(@event) %>" id="copy-link-txt" readonly></div>
          <a class="copy-link-btn btn btn-brand mt-2" data-toggle="tooltip" data-trigger="hover" data-placement="top" data-delay='{"show": 0, "hide": 300}' title="copy link to clipboard"><%= icon('fas', 'clipboard') %></a>
          <a class="btn btn-brand mt-2" href="mailto:?subject=RSVP: Invite to <%= @event.name %>&body=👋 Hi,%0D%0A%0D%0APlease let me know if you can come to my event!%0D%0A <%= event_url(@event) %>%0D%0A%0D%0AThanks,%0D%0A<%= @event.organiser.name  %>"><%= icon('fas', 'envelope') %></a>
          <a class="share-native-btn btn btn-brand mt-2"><%= icon('fas', 'comment') %></a>
        </div>

        <p><small>Pro-tip: <%= icon('fas', 'plus-square') %> Add to your homescreen.</small></p>
      </div>
    </div>

  </div>
</div>
