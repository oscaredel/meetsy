<div class="container banner-section">
  <div class="row">
    <div class="col px-3 py-5 mx-3 mt-1 event-image rounded pane" style="background-image: url('<%= if @event.image.attached?
                                                                               cl_image_path(@event.image.key)
                                                                             else # show default placeholder-image
                                                                              "https://i.gifer.com/4Sxy.gif"
                                                                             end %>')">
      <h1 id="event-title" class="d-inline"><%= @event.name %></h1>
      <br>
    </div>
  </div>
</div>
